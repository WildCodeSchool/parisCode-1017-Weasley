{% extends 'base.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="assets/css/admin.css"/>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.10.16/datatables.min.css"/>

{% endblock %}

{% block body %}

<section class="login">
    <h2 class="text-center">Bienvenue !</h2>

        <div class="col-md-6 col-md-offset-3">
            <legend>Identifiez-vous</legend>
            <form action="index.php?section=login" method="post">
                <div class="form-group">
                    <label for="utilisateur">utilisateur</label>
                    <input type="text" class="form-control" id="utilisateur" name="login">
                </div>
                <div class="error">
                {% if errors.login is defined %}
                    {{ errors.login }}
                {% endif %}
                </div>
                    <div class="form-group">
                        <label for="password">mot de passe</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                <div class="error">
                {% if errors.password is defined %}
                    {{ errors.password }}
                {% endif %}
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-contact">Se connecter</button>
                </div>
            </form>
        </div>
</section>


{% endblock %}